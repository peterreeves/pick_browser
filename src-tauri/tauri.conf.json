{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "pick_browser",
    "version": "0.1.0",
    "identifier": "website.peterreeves.pick-browser",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "Pick Browser",
                "width": 580,
                "height": 480,
                "decorations": false,
                "center": true,
                "resizable": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
