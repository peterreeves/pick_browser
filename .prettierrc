{
    "useTabs": false,
    "tabWidth": 4,
    "singleQuote": false,
    "trailingComma": "all",
    "printWidth": 100,
    "htmlWhitespaceSensitivity": "ignore",
    "endOfLine": "lf",
    "plugins": ["prettier-plugin-svelte"],
    "overrides": [
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte",
                "svelteStrictMode": true
            }
        },
        {
            "files": "*.code-workspace",
            "options": {
                "parser": "json"
            }
        }
    ]
}
